{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types", "./core/types"],
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }